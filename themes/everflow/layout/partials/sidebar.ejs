<% var isHomePage = page.path === 'index.html' %>

<div class="sidebar">
  <div class="sidebar-inner">
    <% if (isHomePage) { %>
      <ul class="main-menu">
        <%- partial('partials/main_menu', { context: 'sidebar' }) %>
      </ul>
    <% } %>
    <div class="list">
      <% if (type !== 'search') { %>
        <h2>
          <% titles = {
            api: 'API',
            examples: 'Examples',
            guide: 'Guide',
            cookbook: 'Cookbook<sup class="beta">beta</sup>',
            'style-guide': 'Style Guide<sup class="beta">beta</sup>'
          } %>
          <%- titles[type] %>
          <% if (['cookbook', 'style-guide'].indexOf(type) === -1) { %>
            <select class="version-select">
              <option value="SELF" selected>4.x</option>
            </select>
          <% } %>
        </h2>
        <%- partial('partials/toc', { type: type }) %>
      <% } %>
    </div>
  </div>
</div>
